{
    "name": "netresearch/nr-sync",
    "type": "typo3-cms-extension",
    "description": "A module for synchronizing content from a production system to a single or multiple target systems.",
    "license": [
        "GPL-3.0-or-later"
    ],
    "keywords": [
        "TYPO3",
        "extension",
        "sync"
    ],
    "authors": [
        {
            "name": "Sebastian Mendel",
            "email": "sebastian.mendel@netresearch.de",
            "role": "Developer",
            "homepage": "https://www.netresearch.de/"
        },
        {
            "name": "Rico Sonntag",
            "email": "rico.sonntag@netresearch.de",
            "role": "Developer",
            "homepage": "https://www.netresearch.de/"
        }
    ],
    "config": {
        "bin-dir": ".build/bin",
        "vendor-dir": ".build/vendor",
        "discard-changes": true,
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform-check": false,
        "gitlab-domains": [
            "git.netresearch.de"
        ],
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "ext-ftp": "*",
        "ext-zlib": "*",
        "typo3/cms-core": "^12.4",
        "typo3/cms-backend": "^12.4",
        "typo3/cms-extbase": "^12.4",
        "typo3/cms-fluid": "^12.4",
        "netresearch/nr-scheduler": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.65",
        "saschaegerer/phpstan-typo3": "^1.0 || v2.x-dev",
        "overtrue/phplint": "^9.5",
        "phpstan/phpstan": "^1.0 || ^2.0",
        "phpstan/phpstan-strict-rules": "^1.0 || ^2.0",
        "phpstan/phpstan-deprecation-rules": "^1.0 || ^2.0",
        "phpunit/phpunit": "^10.0 || ^11.0",
        "ssch/typo3-rector": "^2.0 || ^3.0"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "nr_sync",
            "web-dir": ".build/public"
        },
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Netresearch\\Sync\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netresearch\\Sync\\Tests\\": "Tests"
        }
    },
    "scripts": {
        "ci:cgl": [
            "php-cs-fixer fix --config Build/.php-cs-fixer.dist.php --diff --verbose --cache-file .build/.php-cs-fixer.cache"
        ],
        "ci:rector": [
            "rector process --config Build/rector.php"
        ],
        "ci:test:php:cgl": [
            "@ci:cgl --dry-run"
        ],
        "ci:test:php:lint": [
            "phplint --configuration Build/.phplint.yml"
        ],
        "ci:test:php:phpstan": [
            "phpstan analyze --configuration Build/phpstan.neon --memory-limit=-1"
        ],
        "ci:test:php:phpstan:baseline": [
            "phpstan analyze --configuration Build/phpstan.neon --memory-limit=-1 --generate-baseline Build/phpstan-baseline.neon --allow-empty-baseline"
        ],
        "ci:test:php:rector": [
            "@ci:rector --dry-run"
        ],
        "ci:test:php:unit": [
            "phpunit --configuration Build/phpunit.xml"
        ],
        "ci:test": [
            "@ci:test:php:lint",
            "@ci:test:php:phpstan",
            "@ci:test:php:rector",
            "@ci:test:php:cgl",
            "@ci:test:php:unit"
        ]
    }
}
