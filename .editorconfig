# EditorConfig for t3x-sync
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 4

[*.{js,ts}]
indent_style = space
indent_size = 2

[*.{yaml,yml,json}]
indent_style = space
indent_size = 2

[*.{xlf,xml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
